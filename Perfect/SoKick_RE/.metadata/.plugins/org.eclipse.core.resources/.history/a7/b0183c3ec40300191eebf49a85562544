<script>
    function click_sign_up(){
        회원가입시키기
		emptycheck();
		//여기서 qeury로 넘기면됨.
	}

	function emptycheck(){
		if((document.getElementById("id").value == "") || (document.getElementById("password").value == "") 
		|| (document.getElementById("major").value=="") || (document.getElementById("phonenum").value == ""){
			alert("필수항목(*)을 빠짐없이 입력해주세요");
			return;			
		}
	}
	
</script>