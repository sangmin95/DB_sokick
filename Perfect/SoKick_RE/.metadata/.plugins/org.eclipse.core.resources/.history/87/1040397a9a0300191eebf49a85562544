<script type="text/javascript">
    function doAction(){
        var req =  createRequest();
        if (req == null){
            alert("실행이 되지 않는다!");
            return;
        }
        var stime = document.getElementById('start_time').value;
        var parsetime=stime.split(':');
        alert(parsetime[0]);
        
        req.open("post", "../loader.jsp?param=" + encodeURI(stime));
        req.setRequestHeader("User-Agent","XMLHttpRequest");
        req.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                var msg = document.getElementById('msg');
                msg.innerHTML = this.responseText;
            }
        }
        req.send();
        
    }

    function createRequest(){
        var httplist = [
            function(){ return new XMLHttpRequest(); },
            function(){ return new ActiveXObjct("Msxml2.XMLHTTP"); },
            function(){ return new ActiveXObject("Microsoft.XMLHTTP"); }
        ];
        for(var i = 0;i < httplist.length;i++){
            try {
                var http = httplist[i]();
                if (http != null) return http;
            } catch(e){
                continue;
            }
        }
        return null;
    }
</script>